<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class='lead'>YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
               <img class='image-responsive' src='<%= campground.image %>'></img> 
                <div class="caption-full">
                    <h4 class='pull-right'>$9.00 / night</h4>
                
                    <h4><%= campground.name %></h4>
                    <p><%= campground.description %></p>
                    Submitted by <p><%= campground.author.username %></p>
                </div>
                
            </div>
            
            <div class="well">
                <div class="text-right">
                    <a class='btn btn-lg btn-primary' href='/campgrounds/<%= campground._id %>/comments/new'>add comments</a>
                </div>
                <hr></hr>
                
                <% campground.comments.forEach(function(data){ %> 
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= data.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= data.text %></p>
                        </div>
                        
                    </div>
                   
                <% }) %>    
                
            </div>
            
        </div>
        
    </div>

   
</div>
<% include ../partials/footer %>