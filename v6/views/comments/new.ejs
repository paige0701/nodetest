<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style='text-align:center'>Add a new campgrounds to <%= campground.name %></h1>
         <div style='width:30%; margin:40px auto'>
        
            <form action='/campgrounds/<%= campground._id %>/comments' method='post'>
                <div class="form-group">
                <input class='form-control' name='comment[text]' placeholder='text' type='text'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='comment[author]' placeholder='author' type='text'></input>
                </div>
                
                <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block' type='submit'>Go</button>
                </div>
            </form>
            
        <a href='/campgrounds'>Go Back</a>
       
        </div>
         
    </div>
</div>

<% include ../partials/footer %>