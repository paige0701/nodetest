<% include ../partials/header %>
    <div class="row">
        <h1 style='text-align:center'>Create a new campgrounds</h1>
         <div style='width:30%; margin:40px auto'>
        
            <form action='/campgrounds' method='post'>
                <div class="form-group">
                <input class='form-control' name='name' placeholder='name' type='text'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='price' placeholder='price' type='number' min='0.01' step='0.01'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='image' placeholder='image url' type='text'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='description' placeholder='Description' type='text'></input>
                </div>
                <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block' type='submit'>Go</button>
                </div>
            </form>
            
        <a href='/campgrounds'>Go Back</a>
       
        </div>
         
    </div>
<% include ../partials/footer %>