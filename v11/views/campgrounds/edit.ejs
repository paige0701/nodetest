<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style='text-align:center'>Edit <%= campgrounds.name %></h1>
         <div style='width:30%; margin:40px auto'>
        
            <form action='/campgrounds/<%= campgrounds._id %>/?_method=PUT' method='POST'>
                <div class="form-group">
                <input class='form-control' name='campground[name]' value='<%= campgrounds.name %>' type='text'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='campground[image]' value='<%= campgrounds.image %>' type='text'></input>
                </div>
                <div class="form-group">
                <input class='form-control' name='campground[description]' value='<%= campgrounds.description %>' type='text'></input>
                </div>
                <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block' type='submit'>Go</button>
                </div>
            </form>
            
        <a href='/campgrounds'>Go Back</a>
       
        </div>
         
    </div>
</div>

<% include ../partials/footer %>